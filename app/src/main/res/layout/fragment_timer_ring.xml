<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.utn.quecocino.timer.TimerRingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/timerRingTag"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/timerRingTag"
        android:textSize="35sp"
        android:gravity="center"
        android:text="@string/timer.ringMessage"
        android:layout_margin="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/timer.ok"
        android:layout_margin="30dp"
        android:padding="15dp"
        android:textSize="25sp"
        android:textColor="#fff"
        android:background="@drawable/button_pimary_ripple_shape"
        android:id="@+id/timerRingStop"/>



</RelativeLayout>
