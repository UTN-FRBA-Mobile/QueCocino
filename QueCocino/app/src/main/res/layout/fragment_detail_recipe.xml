<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobile.utn.quecocino.detailrecipe.DetailRecipe"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/detailRecipe.mainImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detailRecipe.mainImage"
        android:background="#32413b4d"
        >

        <TextView
            android:id="@+id/detailRecipe.titleRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:textSize="40dp"
            />

        <TextView
            android:id="@+id/detailRecipe.authorRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginBottom="-5dp"
            android:layout_alignRight="@+id/detailRecipe.titleRecipe"
            android:layout_alignBottom="@+id/detailRecipe.titleRecipe"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detailRecipe.featuresRecipe1"
        android:paddingTop="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:src="@drawable/detailrecipe_cookingtime"
            android:id="@+id/detailRecipe.cookingTimeImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <TextView
            android:id="@+id/detailRecipe.cookingTimeRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:paddingRight="45dp"
            />

        <ImageView
            android:id="@+id/detailRecipe.applianceImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            />

        <TextView
            android:id="@+id/detailRecipe.applianceRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_margin="5dp"
            />

    </LinearLayout>

</RelativeLayout>
